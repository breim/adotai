= provide :title, 'Log In'

.container
	.row
		.col-md-12
			.col-md-4{class: 'col-md-offset-4'}
				%h2{class: 'bold'} Log In

				= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
					.field
						= f.label :email, 'E-mail'
						= f.email_field :email, class: 'form-control', required: 'required',
						placeholder: 'Digite o e-mail', autocomplete: 'off'
					.field
						= f.label :password, 'Senha'
						= f.password_field :password, class: 'form-control', required: 'required',
						placeholder: 'Digite a senha', autocomplete: 'off'
					- if devise_mapping.rememberable?
						.field
						= f.label :remember_me, 'Lembrar-me?'
						= f.check_box :remember_me
					.actions
						= f.submit 'Log In', class: 'btn btn-primary btn-lg top'

				= render 'devise/shared/links'